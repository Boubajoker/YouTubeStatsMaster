{
    "author": "Boubajoker",
    "incognito": "split",
    "manifest_version": 2,
    "name": "YouTubeStatsMaster",
    "version": "0.0.5",
    "homepage_url" : "https://boubajoker.github.io/YouTubeStats/",
    "description": "An extension to get some presice stats about the YouTube video that you're watching !",
    "browser_action" : {
        "default_popup" : "./index.html",
        "default_title" : "Click here to open YouTubeStatsMaster"
    },
    "options_ui": {
        "open_in_tab": true,
        "page": "./options.html"
    },
    "permissions": [
        "tabs"
    ],
    "icons": {
       "128": "./assets/icon/icon_128.png",
       "64": "./assets/icon/icon_64.png",
       "32": "./assets/icon/icon_32.png",
       "16": "./assets/icon/icon_16.png"
    }
}